<UserControl x:Class="FoxTunes.PlaylistConfigDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Core="clr-namespace:FoxTunes;assembly=FoxTunes.Core" 
             xmlns:Windows="clr-namespace:FoxTunes" 
             xmlns:ViewModel="clr-namespace:FoxTunes.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <UserControl.Resources>
        <ViewModel:PlaylistConfig x:Key="ViewModel" Playlist="{Binding Playlist, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Windows:PlaylistConfigDialog}}}"></ViewModel:PlaylistConfig>
    </UserControl.Resources>
    <ContentControl>
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type ViewModel:DynamicPlaylistConfig}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="{x:Static ViewModel:StringResources.PlaylistConfigDialog_Expression}"></Label>
                    <TextBox Grid.Column="1" AcceptsReturn="True" AcceptsTab="True" SpellCheck.IsEnabled="False" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="{Binding Expression}"></TextBox>
                </Grid>
            </DataTemplate>
            <DataTemplate DataType="{x:Type ViewModel:SmartPlaylistConfig}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static ViewModel:StringResources.PlaylistConfigDialog_Genres}"></Label>
                    <Windows:Genres Grid.Column="1" Grid.Row="0" Margin="0,0,0,4" SelectedGenres="{Binding Genres}"></Windows:Genres>
                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static ViewModel:StringResources.PlaylistConfigDialog_MinRating}"></Label>
                    <Slider Grid.Column="1" Grid.Row="1" Minimum="0" Maximum="5" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="1" TickFrequency="1" Value="{Binding MinRating}" ToolTip="{Binding MinRating}"></Slider>
                    <Label Grid.Column="0" Grid.Row="2" Content="{x:Static ViewModel:StringResources.PlaylistConfigDialog_MinAge}"></Label>
                    <Slider Grid.Column="1" Grid.Row="2" Minimum="0" Maximum="90" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="10" TickFrequency="1" Value="{Binding MinAge}" ToolTip="{Binding MinAge}"></Slider>
                    <Label Grid.Column="0" Grid.Row="3" Content="{x:Static ViewModel:StringResources.PlaylistConfigDialog_Count}"></Label>
                    <Slider Grid.Column="1" Grid.Row="4" Minimum="12" Maximum="30" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="5" TickFrequency="1" Value="{Binding Count}" ToolTip="{Binding Count}"></Slider>
                </Grid>
            </DataTemplate>
        </ContentControl.Resources>
        <Binding Path="Config" Source="{StaticResource ViewModel}"/>
    </ContentControl>
</UserControl>
